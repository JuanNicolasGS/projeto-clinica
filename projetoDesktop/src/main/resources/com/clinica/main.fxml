<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.MainController"
            stylesheets="@css/app.css"
            prefWidth="1200.0" prefHeight="720.0"
            styleClass="root">

    <left>
        <VBox prefWidth="200.0" spacing="8.0" styleClass="sidebar">
            <padding><Insets top="12" right="10" bottom="12" left="10"/></padding>

            <Label text="CLÍNICA" styleClass="sidebar-title"/>

            <Button fx:id="btnMenuPacientes" text="Pacientes" onAction="#goPacientes"
                    maxWidth="1.7976931348623157E308" styleClass="menu-button,menu-selected"/>
            <Button fx:id="btnMenuProfissionais" text="Profissionais" onAction="#goProfissionais"
                    maxWidth="1.7976931348623157E308" styleClass="menu-button"/>
            <Button fx:id="btnMenuConsultas" text="Consultas" onAction="#goConsultas"
                    maxWidth="1.7976931348623157E308" styleClass="menu-button"/>
            <Button fx:id="btnMenuLancamento" text="Lançamento" onAction="#goLancamento"
                    maxWidth="1.7976931348623157E308" styleClass="menu-button"/>

            <Region VBox.vgrow="ALWAYS"/>

            <Label fx:id="lblDbStatus" text="DB: conectado" styleClass="hint"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" styleClass="content"/>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER_LEFT" styleClass="bottom-bar">
            <padding><Insets top="8" right="12" bottom="8" left="12"/></padding>
            <Label fx:id="lblStatus" text="Pronto."/>
        </HBox>
    </bottom>

</BorderPane>
