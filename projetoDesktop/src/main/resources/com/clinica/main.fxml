            <Button fx:id="btnProfissionais" text="Profissionais" onAction="#goProfissionais"
                    maxWidth="1.7976931348623157E308" styleClass="menu-button"/>
            <Button fx:id="btnConsultas" text="Consultas" onAction="#goConsultas"
                    maxWidth="1.7976931348623157E308" styleClass="menu-button"/>
            <Button fx:id="btnLancamento" text="LanÃ§amento" onAction="#goLancamento"
                    maxWidth="1.7976931348623157E308" styleClass="menu-button"/>

            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane"/>
    </center>

    <bottom>
        <HBox spacing="10.0" alignment="CENTER_LEFT" styleClass="bottom-bar">
            <padding><Insets top="8" right="12" bottom="8" left="12"/></padding>
            <Label fx:id="lblStatus" text="Pronto."/>
        </HBox>
