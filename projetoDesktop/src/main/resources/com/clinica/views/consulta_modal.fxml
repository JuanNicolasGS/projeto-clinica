<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.ConsultaModalController"
            styleClass="root"
            prefWidth="720.0" prefHeight="520.0">

    <center>
        <VBox spacing="12.0" styleClass="form">
            <padding><Insets top="12" right="16" bottom="16" left="16"/></padding>

            <Label fx:id="lblTitulo" text="Editar Consulta" styleClass="section-title"/>

            <GridPane hgap="10.0" vgap="10.0">
                <Label text="Paciente" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbPaciente" promptText="Selecione..." editable="true"
                          GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

                <Label text="Médico" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbMedico" promptText="Selecione..." editable="true"
                          GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

                <Label text="Data" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpData" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>

                <Label text="Hora" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtHora" promptText="HH:mm"
                           GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Status" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbStatus" promptText="Selecione..."
                          GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
            </GridPane>

            <Label text="Observações" styleClass="section-title"/>
            <TextArea fx:id="txtObs" promptText="Observações da consulta..." wrapText="true" prefRowCount="10"/>

            <Separator/>

            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar"/>
                <Button fx:id="btnSalvar" text="Salvar" styleClass="btn-primary" onAction="#onSalvar"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
