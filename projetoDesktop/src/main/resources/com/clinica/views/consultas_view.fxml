<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.ConsultasController"
            styleClass="root">

    <top>
        <VBox spacing="10">
            <padding><Insets top="12" right="12" bottom="0" left="12"/></padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Consultas" styleClass="section-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Nova"  styleClass="btn-primary"/>
                <Button text="Editar" />
                <Button text="Receita" />
                <Button text="Excluir" styleClass="btn-danger"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtBusca" promptText="Buscar por paciente, profissional ou observações..." HBox.hgrow="ALWAYS"/>
                <DatePicker fx:id="dpDe" promptText="De"/>
                <DatePicker fx:id="dpAte" promptText="Até"/>
                <ComboBox fx:id="cbClinica" promptText="Clínica" prefWidth="220"/>
                <Button text="Filtrar"  styleClass="btn-primary"/>
                <Button text="Limpar" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <TableView fx:id="tblConsultas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                    <TableColumn fx:id="colData" text="DATA" prefWidth="120"/>
                    <TableColumn fx:id="colPaciente" text="PACIENTE" prefWidth="260"/>
                    <TableColumn fx:id="colProfissional" text="PROFISSIONAL" prefWidth="240"/>
                    <TableColumn fx:id="colClinica" text="CLÍNICA" prefWidth="220"/>
                    <TableColumn fx:id="colValor" text="VALOR" prefWidth="120"/>
                </columns>
            </TableView>

            <Label text="Dica: duplo clique na linha para editar." styleClass="hint"/>
        </VBox>
    </center>

</BorderPane>
