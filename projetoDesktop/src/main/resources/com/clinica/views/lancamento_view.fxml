<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.LancamentoController"
            styleClass="root">

    <top>
        <VBox spacing="10">
            <padding><Insets top="12" right="12" bottom="0" left="12"/></padding>
            <Label text="Lançamento de Consulta" styleClass="section-title"/>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.55">
            <!-- Esquerda -->
            <VBox spacing="12" styleClass="form">
                <padding><Insets top="12" right="16" bottom="16" left="16"/></padding>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="90"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Clínica" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbClinica" promptText="Selecione..." GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Paciente" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbPaciente" promptText="Selecione..." editable="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Profissional" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbProfissional" promptText="Selecione..." editable="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Data" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="dpData" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Valor" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtValor" promptText="0,00" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>

                <Label text="Observações" styleClass="section-title"/>
                <TextArea fx:id="txtObs" promptText="Sintomas, diagnóstico, conduta..." wrapText="true" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Direita -->
            <VBox spacing="12" styleClass="form">
                <padding><Insets top="12" right="16" bottom="16" left="16"/></padding>

                <Label text="Receita (Medicamentos)" styleClass="section-title"/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="txtBuscaMed" promptText="Buscar medicamento..." HBox.hgrow="ALWAYS"/>
                    <Button text="+ Adicionar"  styleClass="btn-primary"/>
                </HBox>

                <TableView fx:id="tblReceita" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colMed" text="Medicamento" prefWidth="520"/>
                        <TableColumn fx:id="colAcao" text="Ação" prefWidth="120"/>
                    </columns>
                </TableView>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Imprimir Receita" />
                </HBox>
            </VBox>

        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="bottom-bar">
            <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>
            <Button text="Cancelar" />
            <Button text="Salvar Consulta"  styleClass="btn-primary"/>
        </HBox>
    </bottom>

</BorderPane>
