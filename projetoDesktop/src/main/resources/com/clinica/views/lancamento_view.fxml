<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.LancamentoController"
            stylesheets="@../css/app.css"
            prefWidth="1200.0" prefHeight="720.0"
            styleClass="root">

    <left>
        <VBox prefWidth="200.0" spacing="6.0" styleClass="sidebar">
            <Label text="CLÍNICA"/>

            <Button fx:id="btnPacientes" text="Pacientes" mnemonicParsing="false" styleClass="menu-button"/>
            <Button fx:id="btnProfissionais" text="Profissionais" mnemonicParsing="false" styleClass="menu-button"/>
            <Button fx:id="btnConsultas" text="Consultas" mnemonicParsing="false" styleClass="menu-button"/>
            <Button fx:id="btnLancamento" text="Lançamento" mnemonicParsing="false" styleClass="menu-button,menu-selected"/>
        </VBox>
    </left>

    <center>
        <BorderPane>
            <padding>
                <Insets top="14" right="14" bottom="0" left="14"/>
            </padding>

            <top>
                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <Label text="Lançamento de Consulta" styleClass="section-title"/>
                </HBox>
            </top>

            <center>
                <SplitPane dividerPositions="0.54">
                    <items>
                        <VBox spacing="14.0" styleClass="form">
                            <padding>
                                <Insets top="14" right="14" bottom="14" left="14"/>
                            </padding>

                            <GridPane hgap="12.0" vgap="12.0">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="110.0" prefWidth="110.0"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>

                                <Label text="Clínica" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <ComboBox fx:id="cbClinica" promptText="Selecione..." GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Paciente" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <ComboBox fx:id="cbPaciente" promptText="Selecione..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Profissional" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <ComboBox fx:id="cbProfissional" promptText="Selecione..." GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Data" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <HBox spacing="8.0" GridPane.rowIndex="3" GridPane.columnIndex="1">
                                    <TextField fx:id="txtData" HBox.hgrow="ALWAYS"/>
                                    <Button fx:id="btnCalendario" text="▦" mnemonicParsing="false" prefWidth="34.0" minWidth="34.0" maxWidth="34.0"/>
                                </HBox>

                                <Label text="Valor" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtValor" promptText="0,00" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                            </GridPane>

                            <Label text="Observações" styleClass="section-title"/>
                            <TextArea fx:id="txtObs" promptText="Sintomas, diagnóstico, conduta..." VBox.vgrow="ALWAYS"/>
                        </VBox>

                        <VBox spacing="12.0" styleClass="form">
                            <padding>
                                <Insets top="14" right="14" bottom="14" left="14"/>
                            </padding>

                            <Label text="Receita (Medicamentos)" styleClass="section-title"/>

                            <HBox spacing="10.0">
                                <TextField fx:id="txtBuscarMedicamento" promptText="Buscar medicamento..." HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnAdicionarMedicamento" text="+ Adicionar" mnemonicParsing="false" styleClass="btn-primary"/>
                            </HBox>

                            <TableView fx:id="tblMedicamentos" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colMedicamento" text="Medicamento" prefWidth="420.0"/>
                                </columns>
                            </TableView>

                            <HBox alignment="CENTER_RIGHT">
                                <Button fx:id="btnImprimirReceita" text="Imprimir Receita" mnemonicParsing="false"/>
                            </HBox>
                        </VBox>
                    </items>
                </SplitPane>
            </center>

            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="bottom-bar">
                    <padding>
                        <Insets top="10" right="14" bottom="10" left="14"/>
                    </padding>

                    <Label fx:id="lblDb" text="DB: conectado"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnCancelar" text="Cancelar" mnemonicParsing="false"/>
                    <Button fx:id="btnSalvarConsulta" text="Salvar Consulta" mnemonicParsing="false" styleClass="btn-primary"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblTela" text="Lançamento"/>
                </HBox>
            </bottom>

        </BorderPane>
    </center>

</BorderPane>
