<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.ConsultaModalController"
            styleClass="root"
            prefWidth="780" prefHeight="520">

    <center>
        <VBox spacing="12" styleClass="form">
            <padding><Insets top="12" right="16" bottom="16" left="16"/></padding>

            <Label fx:id="lblTitulo" text="Consulta" styleClass="section-title"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="110"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Clínica" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbClinica" promptText="Selecione..." GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Profissional" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbProfissional" promptText="Selecione..." editable="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Paciente" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbPaciente" promptText="Selecione..." editable="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Data" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpData" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Valor" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtValor" promptText="0,00" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <Label text="Observações" styleClass="section-title"/>
            <TextArea fx:id="txtObs" promptText="Observações..." wrapText="true" prefRowCount="10"/>

            <Separator/>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Cancelar" />
                <Button text="Salvar"  styleClass="btn-primary"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
