<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.ReceitaModalController"
            stylesheets="@../../css/app.css"
            styleClass="root"
            prefWidth="900" prefHeight="620"
            minWidth="900" minHeight="620">


    <center>
        <VBox spacing="12" styleClass="form">
            <padding>
                <Insets top="12" right="16" bottom="16" left="16"/>
            </padding>

            <Label fx:id="lblTitulo" text="Receita" styleClass="section-title"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="110"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Data" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpData" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Validade" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dpValidade" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <Label text="Observações" styleClass="section-title"/>
            <TextArea fx:id="txtObs" promptText="Observações..." wrapText="true" prefRowCount="5"/>

            <Separator/>

            <Label text="Medicamentos" styleClass="section-title"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtBuscaMed" promptText="Buscar/Adicionar medicamento..." HBox.hgrow="ALWAYS"/>
                <Button text="+ Adicionar" styleClass="btn-primary" onAction="#adicionarMedicamento"/>
            </HBox>

            <TableView fx:id="tblMedicamentos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMedNome" text="Medicamento" prefWidth="560"/>
                    <TableColumn fx:id="colMedAcao" text="Ação" prefWidth="140"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Fechar" onAction="#fechar"/>
                <Button text="Salvar" styleClass="btn-primary" onAction="#salvar"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
