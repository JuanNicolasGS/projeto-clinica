<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.PacientesController"
            stylesheets="@../css/app.css"
            prefWidth="1200.0" prefHeight="720.0"
            styleClass="root">

    <left>
        <VBox prefWidth="200.0" spacing="6.0" styleClass="sidebar">
            <Label text="CLÍNICA"/>

            <Button fx:id="btnPacientes" text="Pacientes" mnemonicParsing="false" styleClass="menu-button,menu-selected"/>
            <Button fx:id="btnProfissionais" text="Profissionais" mnemonicParsing="false" styleClass="menu-button"/>
            <Button fx:id="btnConsultas" text="Consultas" mnemonicParsing="false" styleClass="menu-button"/>
            <Button fx:id="btnLancamento" text="Lançamento" mnemonicParsing="false" styleClass="menu-button"/>
        </VBox>
    </left>

    <center>
        <BorderPane>
            <padding>
                <Insets top="14" right="14" bottom="0" left="14"/>
            </padding>

            <top>
                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <Label text="Pacientes" styleClass="section-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnNovo" text="Novo" mnemonicParsing="false"/>
                    <Button fx:id="btnSalvar" text="Salvar" mnemonicParsing="false" styleClass="btn-primary"/>
                    <Button fx:id="btnExcluir" text="Excluir" mnemonicParsing="false" styleClass="btn-danger"/>
                </HBox>
            </top>

            <center>
                <SplitPane dividerPositions="0.66">
                    <items>
                        <VBox spacing="12.0">
                            <padding>
                                <Insets top="10" right="12" bottom="12" left="0"/>
                            </padding>

                            <TextField fx:id="txtBusca" promptText="Buscar por Nome ou CPF..." />

                            <TableView fx:id="tblPacientes" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colCpf" text="CPF" prefWidth="260.0"/>
                                    <TableColumn fx:id="colNome" text="NOME" prefWidth="420.0"/>
                                </columns>
                            </TableView>
                        </VBox>

                        <VBox spacing="12.0" styleClass="form">
                            <padding>
                                <Insets top="14" right="14" bottom="14" left="14"/>
                            </padding>

                            <Label text="Cadastro" styleClass="section-title"/>

                            <GridPane hgap="12.0" vgap="12.0">
                                <columnConstraints>
                                    <ColumnConstraints minWidth="110.0" prefWidth="110.0"/>
                                    <ColumnConstraints hgrow="ALWAYS"/>
                                </columnConstraints>

                                <Label text="CPF" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtCpf" promptText="Somente números" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Nome" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtNome" promptText="Nome completo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Data Nasc." GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <HBox spacing="8.0" GridPane.rowIndex="2" GridPane.columnIndex="1">
                                    <TextField fx:id="txtDataNasc" HBox.hgrow="ALWAYS"/>
                                    <Button fx:id="btnCalendario" text="▦" mnemonicParsing="false" prefWidth="34.0" minWidth="34.0" maxWidth="34.0"/>
                                    <Button fx:id="btnMais" text="..." mnemonicParsing="false" prefWidth="34.0" minWidth="34.0" maxWidth="34.0"/>
                                </HBox>
                            </GridPane>

                            <Separator/>

                            <Label text="Telefones" styleClass="section-title"/>

                            <HBox spacing="10.0">
                                <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" HBox.hgrow="ALWAYS"/>
                                <Button fx:id="btnAdicionarTelefone" text="+ Adicionar" mnemonicParsing="false"/>
                            </HBox>

                            <TableView fx:id="tblTelefones" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colNumero" text="Número" prefWidth="320.0"/>
                                </columns>
                            </TableView>

                            <Label fx:id="lblDica" text="Dica: selecione um paciente na tabela para editar."/>
                        </VBox>
                    </items>
                </SplitPane>
            </center>

            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="bottom-bar">
                    <padding>
                        <Insets top="10" right="14" bottom="10" left="14"/>
                    </padding>
                    <Label fx:id="lblDb" text="DB: conectado"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblTela" text="Pacientes"/>
                </HBox>
            </bottom>

        </BorderPane>
    </center>

</BorderPane>

