<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.clinica.controller.PacientesController"
            styleClass="root">

    <center>
        <SplitPane fx:id="split" dividerPositions="0.60">
            <!-- Lista -->
            <VBox spacing="10">
                <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Pacientes" styleClass="section-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Novo" />
                    <Button text="Salvar" styleClass="btn-primary"/>
                    <Button text="Excluir" styleClass="btn-danger"/>
                </HBox>

                <TextField fx:id="txtBusca" promptText="Buscar por Nome ou CPF..." />

                <TableView fx:id="tblPacientes" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCpf" text="CPF" prefWidth="160"/>
                        <TableColumn fx:id="colNome" text="NOME" prefWidth="280"/>
                        <TableColumn fx:id="colNasc" text="DATA NASC." prefWidth="140"/>
                        <TableColumn fx:id="colTel" text="TELEFONE" prefWidth="160"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Form -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                <content>
                    <VBox spacing="12" styleClass="form">
                        <padding><Insets top="12" right="16" bottom="16" left="16"/></padding>

                        <Label text="Cadastro" styleClass="section-title"/>

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints minWidth="100"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="CPF" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtCpf" promptText="Somente números" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Nome" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtNome" promptText="Nome completo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Data Nasc." GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <DatePicker fx:id="dpNasc" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        </GridPane>

                        <Separator/>

                        <Label text="Telefones" styleClass="section-title"/>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" HBox.hgrow="ALWAYS"/>
                            <Button text="+ Adicionar" />
                        </HBox>

                        <TableView fx:id="tblTelefones" prefHeight="180">
                            <columns>
                                <TableColumn fx:id="colTelNumero2" text="Número" prefWidth="420"/>
                                <TableColumn fx:id="colTelAcao" text="Ação" prefWidth="110"/>
                            </columns>
                        </TableView>

                        <Label fx:id="lblFormHint" text="Dica: selecione um paciente na tabela para editar." styleClass="hint"/>
                    </VBox>
                </content>
            </ScrollPane>

        </SplitPane>
    </center>

</BorderPane>
