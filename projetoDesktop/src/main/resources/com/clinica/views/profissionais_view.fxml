<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="root">

    <center>
        <SplitPane dividerPositions="0.60">
            <!-- Lista -->
            <VBox spacing="10.0">
                <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

                <HBox spacing="10.0" alignment="CENTER_LEFT">
                    <Label text="Pesquisar Profissionais:"/>
                    <TextField fx:id="txtBuscaProfissional" promptText="Nome ou especialidade..." HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnNovoProf" text="Novo" styleClass="btn-primary"/>
                </HBox>

                <TableView fx:id="tblProfissionais" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colProfNome" text="NOME" prefWidth="320.0"/>
                        <TableColumn fx:id="colProfEsp" text="ESPECIALIDADE" prefWidth="240.0"/>
                        <TableColumn fx:id="colProfAtivo" text="ATIVO" prefWidth="80.0"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Formulário -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                <content>
                    <VBox spacing="12.0" styleClass="form">
                        <padding><Insets top="12" right="16" bottom="16" left="16"/></padding>

                        <Label text="Formulário do Profissional" styleClass="section-title"/>

                        <GridPane hgap="10.0" vgap="10.0">
                            <Label text="Nome" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtProfNome" promptText="Nome completo"
                                       GridPane.rowIndex="0" GridPane.columnIndex="1"
                                       GridPane.hgrow="ALWAYS"/>

                            <Label text="Especialidade" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cbEspecialidade" promptText="Selecione..."
                                      GridPane.rowIndex="1" GridPane.columnIndex="1"
                                      GridPane.hgrow="ALWAYS"/>

                            <Label text="Ativo" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <CheckBox fx:id="chkProfAtivo" text="Profissional ativo"
                                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        </GridPane>

                        <Separator/>

                        <HBox spacing="10.0" alignment="CENTER_RIGHT">
                            <Button fx:id="btnCancelarProf" text="Cancelar"/>
                            <Button fx:id="btnSalvarProf" text="Salvar" styleClass="btn-primary"/>
                            <Button fx:id="btnExcluirProf" text="Excluir" styleClass="btn-danger"/>
                        </HBox>
                    </VBox>
                </content>
            </ScrollPane>
        </SplitPane>
    </center>

</BorderPane>
